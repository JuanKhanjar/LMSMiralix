@if (GroupProduct.PurchasedProduct != null)
{
    <div class="@ClassName">
        <div class="@SubClassName">@GroupProduct.PurchasedProduct.ProductName</div>
        <div class="@SubClassName">@GroupProduct.PurchasedProduct.ProductPrice.ToString("c2")</div>
        <div class="@SubClassName">@GroupProduct.AddedQuantity</div>
    </div>
}

@code {

    [Parameter]
    public GroupProduct GroupProduct { get; set; } = new GroupProduct( );
    [Parameter] public string ClassName { get; set; } = string.Empty;
    [Parameter] public string SubClassName { get; set; } = string.Empty;
}


