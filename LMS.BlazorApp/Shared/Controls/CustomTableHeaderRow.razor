<!-- CustomHeaderRow.razor -->
@inherits Microsoft.AspNetCore.Components.ComponentBase

<tr class="bg-light">
    @if (ShowHeader(0))
    {
        <th>@Headers[0]</th>
    }
    @if (ShowHeader(1))
    {
        <th>@Headers[1]</th>
    }
    @if (ShowHeader(2))
    {
        <th>@Headers[2]</th>
    }
</tr>

@code {

    [Parameter] public string[] Headers { get; set; }
    [Parameter] public bool[] Conditions { get; set; }

    private bool ShowHeader(int index) => Conditions[index] && !string.IsNullOrEmpty(Headers[index]);
}
