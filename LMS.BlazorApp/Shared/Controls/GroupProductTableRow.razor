
<div class="PurchasedProductItemsRowContainer">
    <div class="PurchasedProductItemsRow">
        <div class="ProductItem">@GroupProduct.ProductName</div>
        <div class="ProductItem">@GroupProduct.ProductPrice</div>
        <div class="ProductItem">
            <span>@($"{GroupProduct.AddedQty + GroupProduct.InputProductQuantity}")</span>
        </div>
        <div class="ProductItem">
            <div class="position-relative">
                <input type="number"
                @key="GroupProduct.PurchasedProductId"
                       min="0"
                       max="@PurchasedProductAvailability"
                       class="inputNumber"
                       id="@($"inputNumber{GroupProduct.PurchasedProductId}")"
                @bind="GroupProduct.InputProductQuantity"
                @oninput="()=>PurchasedProductAvailabilityQuantityChanged.InvokeAsync()" />

                @if (IsInvalidQuantity( ))
                {
                    @*<span class="position-absolute bottom-0 start-0 translate-middle p-2 bg-danger border border-white rounded-circle"></span>*@
                }
            </div>
        </div>
    </div>

    <div class="">
        <div class="ProductItem text-center">
            <button class="btn btn-outline-danger border-0" style="" @onclick="RemoveProductClicked"><i class="far fa-trash-alt"></i></button>
        </div>
    </div>
</div>